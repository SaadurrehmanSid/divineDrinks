
@model Order

<div class="row orderForm">

    <h3 class="text-center ml-3">You are just one step away from ordering your drinks.</h3>
    <br>

    <form asp-action="Checkout" method="post" class="form-horizontal col-md-8" role="form">
        <div class="form-group">
            <label asp-for="LastName"class="control-label"></label>
            <div>
                <input asp-for="LastName"  class="form-control col-md-6" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="FirstName" class=" control-label"></label>
            <div>
                <input asp-for="FirstName" class="form-control col-md-6" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="AddressLine1" class=" control-label"></label>
            <div>
                <input asp-for="AddressLine1" class="form-control col-md-6" />
                <span asp-validation-for="AddressLine1" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="AddressLine2" class="control-label"></label>
            <div>
                <input asp-for="AddressLine2" class="form-control col-md-6" />
                <span asp-validation-for="AddressLine2" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="ZipCode" class="control-label"></label>
            <div>
                <input asp-for="ZipCode" class="form-control col-md-6" />
                <span asp-validation-for="ZipCode" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="City" class="control-label"></label>
            <div>
                <input asp-for="City" class="form-control col-md-6" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="State" class="control-label"></label>
            <div>
                <input asp-for="State" class="form-control col-md-6" />
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Country" class="control-label"></label>
            <div>
                <input asp-for="Country" class="form-control col-md-6" />
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="PhoneNumber" class="control-label"></label>
            <div>
                <input asp-for="PhoneNumber" class="form-control col-md-6" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Email" class="control-label"></label>
            <div>
                <input asp-for="Email" class="form-control col-md-6" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="btn-group">
                <input class="btn btn-success" type="submit" value="Complete order" />
                @*<input class="btn btn-default" type="submit" value="Return " />*@
            </div>
        </div>

    </form>
</div>